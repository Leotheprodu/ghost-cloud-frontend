---
import MainLayout from '@/layouts/MainLayout.astro';
import { appName } from '@chore/config/constants';
---

<MainLayout
  title=`Inicio | ${appName}`
  description=`En ${appName} ofrecemos el servicio de Cloud Computing que necesitas para tu empresa.`
>
  <section class="flex gap-2 w-full h-[35rem] bg-black">
    <div class="hero-home w-full flex justify-center">
      <div
        class="w-1/3 p-10 h-full gap-4 flex flex-col justify-center items-center text-secundario"
      >
        <h1 class="text-4xl text-center font-bold font-code uppercase">
          {appName}
        </h1>
        <p class="font-code text-center uppercase text-xl">
          El Cloud Computing que necesitas para tu empresa
        </p>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .hero-home {
    background-image: url('https://images.pexels.com/photos/325229/pexels-photo-325229.jpeg?auto=compress&cs=tinysrgb&w=600');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: rgba(1, 10, 63, 0.727);
    background-blend-mode: overlay;
  }
</style>
