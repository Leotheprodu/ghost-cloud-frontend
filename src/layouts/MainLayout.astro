---
import { appName } from '@/modules/chore/config/constants';
import BaseHead from '@chore/utils/BaseHead.astro';

interface Props {
  title?: string;
  description: string;
  image?: string;
}
const {
  title=`Inicio | ${appName}`,
  description=`En ${appName} ofrecemos el servicio de Cloud Computing que necesitas para tu empresa.`,
  image = 'https://images.pexels.com/photos/1148820/pexels-photo-1148820.jpeg?auto=compress&cs=tinysrgb&w=600',
} = Astro.props as Props;
const { currentLocale } = Astro;
---

<!doctype html>
<html class="dark" lang=es>
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body
    class="font-geist dark:bg-primario bg-secundario text-primario dark:text-secundario flex flex-col h-screen w-full justify-center items-center"
  >
    <header
      class="w-full flex justify-center items-center"
    >
      <nav class="flex justify-between items-center w-3/4 h-[5rem] p-4 fixed top-0 dark:bg-primario bg-secundario text-primario dark:text-secundario">
        <a href="/" class="text-xl font-bold">{appName}</a>
        <ul class="flex space-x-4">
          <li>
            <a href="/login" class="hover:underline">Login</a>
          </li>
          <li>
            <a href="/contacto" class="hover:underline">Cont√°ctenos</a>
          </li>
        </ul>
    </header>
    <main class="flex flex-col h-full w-full mt-[5rem] items-center relative">
      <slot />
    </main>
  </body>
</html>
