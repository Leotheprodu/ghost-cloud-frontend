---
import { appName } from '@/modules/chore/config/constants';
import BaseHead from '@chore/utils/BaseHead.astro';
import Navbar from '@/modules/chore/components/layout/navigation/navbar.astro';
import { CheckIsLoggedIn } from '@/modules/chore/services/CheckIsLoggedIn';
interface Props {
  title?: string;
  description: string;
  image?: string;
}
const {
  title = `Inicio | ${appName}`,
  description = `En ${appName} ofrecemos el servicio de Cloud Computing que necesitas para tu empresa.`,
  image = 'https://images.pexels.com/photos/1148820/pexels-photo-1148820.jpeg?auto=compress&cs=tinysrgb&w=600',
} = Astro.props as Props;
/* const { currentLocale } = Astro; */
---

<!doctype html>
<html class="dark" lang="es">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <body
    class="font-geist dark:bg-primario bg-secundario text-primario dark:text-secundario flex flex-col w-full"
  >
    <CheckIsLoggedIn client:only="react" />
    <header class="w-full flex justify-center items-center h-[5rem]">
      <Navbar />
    </header>
    <main class="flex flex-col h-full w-full items-center relative">
      <slot />
    </main>
  </body>
</html>
