---
import { ControlPanelNavbarLinks } from '@chore/components/layout/ControlPanel/ControlPanelNavbarLinks';
const pathName = Astro.url.pathname;
---

<nav class="dark:bg-primario bg-secundario text-primario dark:text-secundario">
  <ul class="flex flex-col items-center gap-4">
    <ControlPanelNavbarLinks pathName={pathName} client:only="react" />
  </ul>
</nav>

<style is:global>
  .linkNav:hover .absolute {
    width: 100%;
    height: 2px;
  }
</style>
